	<body>
		<h1 class= "header">Books</h1>
		<table width="55%">
			<tr>
				<th>Title</th>
				<th>Body</th>
				<th></th>
			</tr>
			<tr>
				<% @books.each do |book| %>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
				<td><%= link_to"Show", book_path(book.id) %></td>
				<td><%= link_to"Edit", edit_book_path(book.id) %></td>
				<td><%= link_to"Destroy",book_path(book.id), method: :delete, "data-confirm" => "Are you sure?"%></td>
			</tr>
		<% end %>
		</table>

		<div class="new_form">
			<h2>New Book</h2>
			<%= form_for(@book) do |f| %>
				<div class ="box">
					<p>Title</p>
					<%= f.text_field :title %>
				</div>
				<div class ="box">
					<p>Body</p>
					<%= f.text_area :body %>
				</div>
				<div class="action">
					<%= f.submit 'Create Book' %>
				</div>
			<% end %>
		</div>
	</body>
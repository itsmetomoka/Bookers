
<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>
<body>
	<h1>Editing Book</h1>
	<%= form_for(@book) do |f| %>
	<div class="box">
		<p>Title</p>
		<%= f.text_field :title %>
	</div>
	<div class="box">
		<p>Body</p>
		<%= f.text_area :body %>
	</div>
	<div class="action">
		<%= f.submit 'Update Book' %>
	</div>
	<%= link_to "Show ",book_path(@book.id) %>|
	<%= link_to "Back",books_path %>
	<% end %>
</body>
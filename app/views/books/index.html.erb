<% if flash[:notice] %>
	<p><%= flash[:notice] %></p>
<% end %>
	<body>
		<h1 class= "header">Books</h1>
		<table width="55%">
			<tr>
				<th>Title</th>
				<th>Body</th>
				<th></th>
			</tr>
			<tr>
				<% @books.each do |book| %>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
				<td><%= link_to"Show", book_path(book.id) %></td>
				<td><%= link_to"Edit", edit_book_path(book.id) %></td>
				<td><%= link_to"Destroy",book_path(book.id), method: :delete, "data-confirm" => "Are you sure?"%></td>
			</tr>
		<% end %>
		</table>

		<div class="new_form">
			<h2>New Book</h2>
			<% if @book.errors.any? %>
    		<div id="error_explanation">
      		<h2><%= pluralize(@book.errors.count, "error") %> prohibited this @book from being saved:</h2>

      		<ul>
        		<% @book.errors.full_messages.each do |message| %>
          		<li><%= message %></li>
        		<% end %>
      		</ul>
    		</div>
  		<% end %>
    <%= form_for(@book) do |f| %>
				<div class ="box">
					<p>Title</p>
					<%= f.text_field :title %>
				</div>
				<div class ="box">
					<p>Body</p>
					<%= f.text_area :body %>
				</div>
				<div class="action">
					<%= f.submit 'Create Book' %>
				</div>
			<% end %>
		</div>
	</body>